{
  "compilerOptions": {
    "target": "esNext",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "lodash-es" : [ "node_modules/lodash"]
    },
    "lib": ["esNext", "dom", "dom.iterable", "scripthost"],
  },
  "include": ["tests/**/**.ts"],
  "exclude": ["node_modules", "dist"]
}
